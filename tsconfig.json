{
    "compilerOptions": {
        "target": "ES2022",
        "moduleResolution": "bundler",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "src/shared/*"
            ],
            "@main/*": [
                "src/main/*"
            ],
            "@renderer/*": [
                "src/renderer/*"
            ],
            "@preload/*": [
                "src/preload/*"
            ]
        }
    },
    "references": [
        {
            "path": "./tsconfig.main.json"
        },
        {
            "path": "./tsconfig.renderer.json"
        }
    ]
}